<div class="container text-center">
  <h1 class="pt-5">Create A Loquela Account!</h1>
  <form class="signup pt-5" onsubmit="return checkPassword(this)" action="/signup" method="post">
    <h5 class="no-pad">Username:</h5>
    <div class="row justify-content-center">
      <input type="text" name="username" required/>
    </div>
    <p style="color: red;">{{usernameError}}</p>
    <h5 class="no-pad">Email:</h5>
    <div class="row justify-content-center">
      <input type="email" name="email" required/>
    </div>
    <br>
    <h5 class="no-pad">Password:</h5>
    <div class="row justify-content-center">
      <input type="password" name="passone" id="pass" required/>
    </div>
    <input type="checkbox" onclick="showPassword()">
    Show Password
    <br><br>
    <h5 class="no-pad">Verify Password:</h5>
    <div class="row justify-content-center">
      <input type="password" name="passtwo" id="vpass" required/>
    </div>
    <br><br>
    <input type="submit" class="btn btn-primary" name="submit" value="Sign Up">
  </form>
</div>
<script src="/scripts/signup-scripts.js"></script>
